<div class="header">
    <h1>Stock de Productos</h1>

    <img src="./img/logo-punto-feliz.png" alt="logo">

    <div class="buscador">
        <label for="buscador"><strong>Buscador </strong></label>
        <input type="text" name="buscaodr" id="buscador" placeholder="Â¿Que deseas buscar?">
    </div>
</div>
<hr>

<div class="main-pag">

    <div class="menu-pag">
        <a href="/">Inicio</a>
        <a href="/stock">Stock</a>
        <a href="/carrito/{{carrito._id}}">Carrito</a>
        <a href="/chat">Chat</a>
    </div>

    <div class="card">
        <input type="text" value="{{carrito._id}}" hidden id="carrito">
        <ul id="productos">

            {{#each productos}}
            <div class="card-prod">
                <p><img src="{{image}}" alt="{{name}}"></p>
                <li><strong>Nombre: </strong>{{name}}</li>
                <li><strong>Descripcion: </strong>{{description}}</li>
                <li><strong>Categoria: </strong>{{category}}</li> 
                <li><strong>Precio: </strong>{{price}}</li> 
                <li><strong>Stock: </strong>{{stock}}</li> 
                
                <button onclick="comprar('{{_id}}')">
                    Agregar al Carrito
                </button>    
            </div>

            {{/each}}

        </ul>

        <a href="/carrito/{{carrito._id}}">Ver Carrito</a>
    </div>
</div>

</div>

<hr>
<div class="footer">






</div>

