<div class="header">
    <h1>Stock de Productos</h1>

    <img src="./img/logo-punto-feliz.png" alt="logo">

    <div class="buscador">
        <label for="buscador"><strong>Buscador </strong></label>
        <input type="text" name="buscaodr" id="buscador" placeholder="Â¿Que deseas buscar?">
    </div>

</div>

<hr>

<div class="main-pag">

    <div class="menu2">
        {{>menu}}
    </div>

    <div class="card">
        <div class="stock">
            <form action="/api/products" method="post" enctype="multipart/form-data">
            <input type="file" name="prod">
            <input type="text" name="name" placeholder="nombre del producto">
            <input type="text" name="description" placeholder="descripcion del producto">
            <input type="text" name="category" placeholder="categoria del producto">
            <input type="text" name="price" placeholder="precio del producto">
            <input type="text" name="stock" placeholder="stock del producto">

            <img src="{{img}}" alt="{{name}}">
            <br>
            <input type="submit" value="Grabar" class="grabar">
            </form>
        </div>

        <br>

        <ul id="productos">

            {{#each productos}}
            <div class="card-prod">
                <p><img src="{{image}}" alt="{{name}}"></p>
                <li><strong>ID: </strong>{{_id}}</li>
                <li><strong>Nombre: </strong>{{name}}</li>
                <li><strong>Descripcion: </strong>{{description}}</li>
                <li><strong>Categoria: </strong>{{category}}</li>
                <li><strong>Precio: </strong>{{price}}</li>
                <li><strong>Stock: </strong>{{stock}}</li>
            </div>

            {{/each}}

        </ul>

    </div>

</div>

<hr>
<div class="footer">






</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/stock.js"></script>
