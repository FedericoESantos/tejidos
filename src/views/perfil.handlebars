<div class="header">
    <h1>Bienvenido,@!!!</h1>
    <span class="titulo">{{usuario.name}} {{usuario.last_name}}</span>
    <img src="/img/logo-punto-feliz.png" alt="logo">

    <div class="buscador">
        <label for="buscador"><strong>Buscador </strong></label>
        <input type="text" name="buscaodr" id="buscador" placeholder="¿Que deseas buscar?">
    </div>
</div>
<hr>

<div class="main-pag">

    <div class="menu2">
        {{>menu}}
    </div>

    <div class="card">
        <br>
        {{#if error}}
        <div style="font-weight:bolder; font-size:18px; color:red">{{error}}</div> <br>
        {{/if}}

        {{#if ok}}
        <div style="font-weight:bolder; font-size:18px; color:rgb(55, 131, 14)">{{ok}}</div> <br>
        {{/if}}

        <h2>Mis Datos:</h2>
        <br>

        <div class="datos">
            <span>
                <p>Nombre: </p><strong>{{usuario.name}}</strong> <br>
                <p>Apellido: </p><strong>{{usuario.last_name}}</strong> <br>
                <p>Email: </p><strong>{{usuario.email}}</strong>
            </span>
        </div>

        <div class="compra">

            <a href="/productos">
                <strong>Conoce nuestros Productos: </strong>
                <img src="/img/iconos/productos.png" alt="icono-compra">
            </a>

            <a href="/chat">
                <strong>Ir a la Sala de Chat: </strong>
                <img src="/img/iconos/chat.png" alt="icono-compra">
            </a>

            <a href="/carrito/{{carrito._id}}">
                <strong>Ir a mi Carrito: </strong>
                <img src="/img/iconos/carrito.png" alt="icono-compra">
            </a>

        </div>

    </div>
</div>

<hr>
<div class="footer">
    <span>
        ¡Muchas Gracias por su visita!
    </span>

    <p>
        © 2022 - 2024 | Punto Feliz - <a href="/contacto">Contacto</a>
    </p>
</div>